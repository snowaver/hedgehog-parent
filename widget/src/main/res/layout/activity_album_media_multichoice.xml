<?xml  version="1.0"  encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:app="http://schemas.android.com/apk/res-auto"  android:layout_width="match_parent"  android:layout_height="match_parent"  android:orientation="vertical"  android:fitsSystemWindows="true">

    <cc.mashroom.hedgehog.widget.HeaderBar  android:id="@id/header_bar"  android:layout_width="match_parent"  android:layout_height="50dp"  android:background="@color/steelblue"  app:backText="@string/cancel"  app:additionalText="@string/filter"  app:immersive="true"></cc.mashroom.hedgehog.widget.HeaderBar>

    <ListView  android:id="@+id/album_media_list"  android:layout_width="match_parent"  android:layout_height="0dp"  android:layout_weight="1"  android:scrollbars="none"  android:divider="@color/lightgray"  android:dividerHeight="0px"  android:background="@color/white"></ListView>

    <View  android:layout_width="match_parent"  android:layout_height="1px"  android:background="@color/gainsboro"></View>

    <RelativeLayout  android:layout_width="match_parent"  android:layout_height="50dp"  android:background="@color/white">

        <TextView  android:id="@+id/notice"  android:layout_width="wrap_content"  android:layout_height="match_parent"  android:paddingLeft="10dp"/>

        <TextView  android:id="@+id/ok_button"  android:layout_width="wrap_content"  android:layout_height="match_parent"  android:enabled="false"  android:layout_alignParentRight="true"  android:paddingRight="10dp"  android:text="@string/finish"  android:textColor="@color/darkgray"  android:textSize="18dp"  android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>