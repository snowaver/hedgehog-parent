<?xml  version="1.0"  encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:app="http://schemas.android.com/apk/res-auto"  android:orientation="vertical"  android:layout_width="match_parent"  android:layout_height="wrap_content"  android:paddingLeft="10dp"  android:paddingRight="10dp">

    <LinearLayout  android:id="@+id/head_content"  android:layout_width="match_parent"  android:layout_height="wrap_content"  android:orientation="horizontal"></LinearLayout>

    <LinearLayout  android:id="@+id/body_content"  android:layout_width="match_parent"  android:layout_height="50dp"  android:orientation="horizontal">

        <ImageView  android:id="@+id/icon"  android:layout_width="22dp"  android:layout_height="22dp"  android:layout_gravity="center_vertical"/>

        <com.bluejamesbond.text.DocumentView  android:id="@+id/title"  android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="10dp"  android:layout_gravity="center_vertical"  app:documentView_textSize="14dp"  app:documentView_textAlignment="justified"/>

    </LinearLayout>

</LinearLayout>