<?xml  version="1.0"  encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:app="http://schemas.android.com/apk/res-auto"  android:layout_width="match_parent"  android:layout_height="match_parent"  android:orientation="vertical"  android:background="@color/lightgray">

    <cc.mashroom.hedgehog.widget.HeaderBar  android:id="@+id/header_bar"  android:layout_width="match_parent"  android:layout_height="50dp"  android:title="@string/edit"  android:background="@color/steelblue"  app:backText="@string/cancel"></cc.mashroom.hedgehog.widget.HeaderBar>

    <EditText  android:id="@+id/edit"  android:layout_width="match_parent"  android:layout_height="wrap_content"  android:minHeight="50dp"  android:paddingLeft="10dp"  android:paddingRight="10dp"  android:paddingTop="10dp"  android:paddingBottom="10dp"  android:layout_marginTop="1px"  android:background="@color/white"  android:textSize="18dp"  android:textColor="@color/black"/>

    <View  android:layout_width="match_parent"  android:layout_height="1px"  android:background="@color/gainsboro"></View>

    <View  android:layout_width="match_parent"  android:layout_height="0dp"  android:layout_weight="1"></View>

    <Button  android:id="@+id/ok_button"  android:layout_width="match_parent"  android:layout_height="50dp"  android:background="@color/limegreen"  android:text="@string/finish"  android:textSize="18dp"  android:textColor="@color/white"   android:layout_alignParentBottom="true"/>

</LinearLayout>